<h1>Edit course {{course.title}}</h1>
<form action="/courses/edit" method="post">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" value="{{course.title}}"
               required>
        <label for="title">Course name</label>
        <span class="helper-text" data-error="Input name"></span>
    </div>
    <div class="input-field">
        <input id="price" name="price" type="text" class="validate" value="{{course.price}}"
               required>
        <label for="price">Price</label>
        <span class="helper-text" data-error="Input price"></span>
    </div>
    <div class="input-field">
        <input id="image" name="url" type="text" class="validate" value="{{course.url}}" required>
        <label for="image">URL of image</label>
        <span class="helper-text" data-error="Input url of image"></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">

    <button type="submit" class="btn btn-primary">Edit course</button>
</form>
