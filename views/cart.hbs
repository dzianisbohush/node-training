<h1>cart</h1>
<div id="cart">
    {{#if courses.length}}
        <table>
            <thead>
            <tr>
                <th>Name</th>
                <th>Count</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {{#each courses}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{count}}</td>
                    <td>
                        <button class="btn btn-small js-remove" data-id="{{id}}">Delete</button>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
        <p>
            <strong>Price:</strong><span class="price">{{price}}</span>
        </p>
        <form action="/orders" method="POST">
            <button class="btn" type="submit">Order</button>
        </form>
    {{else}}
        <p>cart is empty</p>
    {{/if}}
</div>

